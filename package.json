    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/mongoose": "^5.5.22",
        "@types/validator": "^13.1.0",
        "husky": "^4.2.5",
        "nodemon": "^2.0.4",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6"
